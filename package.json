{
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:init": "php src/database/init_database.php",
    "serve": "php -S localhost:4000 -t src",
    "lint": "eslint",
    "lint:php": "composer exec psalm --",
    "lint:phpmd": "composer exec phpmd src ansi rulesets.xml",
    "lint:css": "stylelint src/**/*.css",
    "prepare": "husky",
    "test": "echo 'Error: no test specified' && exit 1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@pixie-cheeks/eslint-config": "^11.1.0",
    "@pixie-cheeks/stylelint-config": "^3.0.0",
    "cspell": "^9.0.1",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1"
  },
  "stylelint": {
    "ignoreFiles": "src/global/*",
    "extends": [
      "@pixie-cheeks/stylelint-config",
      "@pixie-cheeks/stylelint-config/bem"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
